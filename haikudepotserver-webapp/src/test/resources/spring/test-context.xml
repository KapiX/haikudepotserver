<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="general.xml"/>

    <bean class="org.haiku.haikudepotserver.IntegrationTestSupportService"/>
    <bean class="org.haiku.haikudepotserver.userrating.NoopUserRatingDerviationService"/>
    <bean class="org.haiku.haikudepotserver.user.NoopLdapSynchronizeJobRunner"/>
    <bean id="mailSender" class="org.haiku.haikudepotserver.CapturingMailSender"/>

    <bean class="org.haiku.haikudepotserver.job.LocalJobOrchestrationServiceImpl"
          init-method="startAsyncAndAwaitRunning"
          destroy-method="stopAsyncAndAwaitTerminated">
        <property name="jobDataStorageService">
            <bean class="org.haiku.haikudepotserver.storage.LocalDataStorageServiceImpl"></bean>
        </property>
    </bean>

</beans>